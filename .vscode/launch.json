  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/manage.py",
      "args": [
        "runserver",
        "--noreload",
      ],
      "django": true,
      "consoleTitle": "Python Debug Django",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Service eddn",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/eddn.py",
      "envFile": "${workspaceFolder}/.env",
      "consoleTitle": "Python Debug Service eddn",
    },
    {
      "name": "Python: Celery Worker Tasck",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "GEVENT_SUPPORT": "True"
      },
      "module": "celery",
      "args": [
        "-A", "eddai_EliteDangerousApiInterface",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "--autoscale", "50,5",
        "-Q", "default",
        "-n", "WorkerTasck@%h"
      ],
      "consoleTitle": "Python Debug Worker Tasck"
    },
    {
      "name": "Python: Celery Worker Admin",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "GEVENT_SUPPORT": "True"
      },
      "module": "celery",
      "args": [
        "-A", "eddai_EliteDangerousApiInterface",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "--autoscale", "50,5",
        "-Q", "admin",
        "-n", "WorkerAdmin@%h"
      ],
      "consoleTitle": "Python Debug Worker Admin"
    },
    {
      "name": "Python: Celery Worker Eddn",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "GEVENT_SUPPORT": "True"
      },
      "module": "celery",
      "args": [
        "-A", "eddai_EliteDangerousApiInterface",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "--autoscale", "50,5",
        "-Q", "eddn",
        "-n", "WorkerEddn@%h"
      ],
      "consoleTitle": "Python Debug Worker Eddn"
    },
    {
      "name": "Python: Celery beat",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "GEVENT_SUPPORT": "True"
      },
      "module": "celery",
      "args": [
        "--app", "eddai_EliteDangerousApiInterface",
        "beat", 
        "--loglevel","Debug",
        "--scheduler", "django_celery_beat.schedulers:DatabaseScheduler"
      ],
      "consoleTitle": "Python Debug Celery beat"
    },
    {
      "name": "Python: Django Shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/manage.py",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "shell",
      ],
      "django": true
    },
    {
      "name": "Python: Django Tests",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "envFile": "${workspaceFolder}/.env",
      "program": "manage.py",
      "args": [
        "test",
        "--noinput"
      ],
      "django": true,
      "consoleTitle": "Python Debug Django Tests"
    }
  ],
  "compounds": [
    {
      "name": "Django/Celery Workers",
      "configurations": [
        "Python: Celery Worker Tasck", "Python: Celery Worker Admin",
        "Python: Celery Worker Eddn", "Python: Celery beat",
        "Python: Django"
      ],
      "stopAll": true
    }
  ]
}
