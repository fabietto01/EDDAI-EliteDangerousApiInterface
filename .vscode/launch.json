{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/manage.py",
      "args": [
        "runserver",
        "--settings",
        "eddai_EliteDangerousApiInterface.settings.dev"
      ],
      "django": true,
      "consoleTitle": "Python Debug Django",
    },
    {
      "name": "Python: Service eddn",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/eddn.py",
      "consoleTitle": "Python Debug Service eddn",
    },
    {
      "name": "Python: Celery Worker Tasck",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "module": "celery",
      "args": [
        "-A", "eddai_EliteDangerousApiInterface",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "-c", "100",
        "-n", "TasckWorker@%h"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "GEVENT_SUPPORT":"True"
      },
      "consoleTitle": "Python Debug Celery Tasck"
    },
    {
      "name": "Python: Celery beat",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "module": "celery",
      "args": [
        "--app", "eddai_EliteDangerousApiInterface",
        "beat", 
        "--loglevel","Debug"
      ],
      "consoleTitle": "Python Debug Console Celery beat"
    },
    {
      "name": "Python: Django Shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/manage.py",
      "args": [
        "shell",
        "--settings",
        "eddai_EliteDangerousApiInterface.settings.dev"
      ],
      "django": true
    }
  ],
  "compounds": [
    {
      "name": "Django/Celery Worker Tasck",
      "configurations": ["Python: Celery Worker Tasck", "Python: Django", "Python: Celery beat"],
      "stopAll": true
    }
  ]
}
