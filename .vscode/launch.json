  "version": "0.2.0",
  "configurations": [
    {
      "name": "System Service",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/services/system_service/manage.py",
      "args": [
        "runserver",
      ],
      "django": true,
      "consoleName": "System Service",
      "envFile": "${workspaceFolder}/services/system_service/.env",
    },
    {
      "name": "System Worker Service",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/services/system_service/",
      "args": [
        "-A", "config",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "--autoscale", "50,5",
        "-Q", "system_service_default,system_service_events_insert",
        "-n", "SystemWorker@%h"
      ],
      "module": "celery",
      "consoleName": "System Worker Service",
      "envFile": "${workspaceFolder}/services/system_service/.env",
      "env": {
        "GEVENT_SUPPORT": "True"
      },
    },
    {
      "name": "BGS Service",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/services/bgs_service/manage.py",
      "args": [
        "runserver",
      ],
      "django": true,
      "consoleName": "BGS Service Console",
      "envFile": "${workspaceFolder}/services/bgs_service/.env",
    },
    {
      "name": "BGS Worker Service",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/services/bgs_service/",
      "args": [
        "-A", "config",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "--autoscale", "50,5",
        "-Q", "bgs_service_events_insert,bgs_service_default",
        "-n", "bgsWorker@%h"
      ],
      "module": "celery",
      "consoleName": "BGS Worker Service",
      "envFile": "${workspaceFolder}/services/bgs_service/.env",
      "env": {
        "GEVENT_SUPPORT": "True"
      },
    },
  ],
  "compounds": [
    {
      "name": "All Services",
      "configurations": [
        "System Service",
        "System Worker Service",
        "BGS Service",
        "BGS Worker Service"
      ]
    }
  ]
}
