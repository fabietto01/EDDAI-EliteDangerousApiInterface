{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/manage.py",
      "args": [
        "runserver",
        "--settings",
        "eddai_EliteDangerousApiInterface.settings.dev"
      ],
      "django": true,
    },
    {
      "name": "Python: Celery Worker Tasck",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "module": "celery",
      "args": [
        "-A", "eddai_EliteDangerousApiInterface",
        "worker", 
        "-l","Debug", 
        "-P", "gevent", 
        "-c", "100",
        "-n", "workerTasck@%h"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "GEVENT_SUPPORT":"True"
      },
    },
    {
      "name": "Python: Celery Worker Service",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/eddai_EliteDangerousApiInterface/",
      "module": "celery",
      "args": [
        "--app", "eddai_EliteDangerousApiInterface",
        "worker", 
        "--loglevel","Debug",
        "--pool", "threads",	
        "--concurrency", "8",
        "--hostname", "workerService@%h"
      ],
    },
    {
      "name": "Python: Django Shell",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/eddai_EliteDangerousApiInterface/manage.py",
      "args": [
        "shell",
        "--settings",
        "eddai_EliteDangerousApiInterface.settings.dev"
      ],
      "django": true
    }
  ],
  "compounds": [
    {
      "name": "Django/Celery Worker Tasck and Service",
      "configurations": ["Python: Django", "Python: Celery Worker Tasck", "Python: Celery Worker Service"],
      "stopAll": true
    }
  ]
}
